<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Inventory</title>
    <script>
        function validateForm() {
            const requiredFields = ['make', 'model', 'year', 'classification_id', 'image', 'thumbnail'];
            for (const field of requiredFields) {
                const value = document.getElementById(field).value;
                if (!value) {
                    alert('All fields are required.');
                    return false;
                }
            }
            return true;
        }
    </script>
</head>
<body>
    <h1>Add New Inventory</h1>

    <!-- Flash Message -->
    <% if (flashMessage) { %>
        <div class="flash-message">
            <p><%= flashMessage %></p>
        </div>
    <% } %>

    <!-- Error Message -->
    <% if (errorMessage) { %>
        <div class="error-message">
            <p><%= errorMessage %></p>
        </div>
    <% } %>

    <!-- Inventory Form -->
    <form action="/inv/add-inventory" method="POST" onsubmit="return validateForm();">
        <label for="classification_id">Classification:</label>
        <%= classificationList %>

        <label for="make">Make:</label>
        <input type="text" id="make" name="make" value="<%= make %>" required>

        <label for="model">Model:</label>
        <input type="text" id="model" name="model" value="<%= model %>" required>

        <label for="year">Year:</label>
        <input type="number" id="year" name="year" value="<%= year %>" required>

        <label for="image">Image Path:</label>
        <input type="text" id="image" name="image" value="<%= image %>" placeholder="/images/no-image.jpg" required>

        <label for="thumbnail">Thumbnail Path:</label>
        <input type="text" id="thumbnail" name="thumbnail" value="<%= thumbnail %>" placeholder="/images/no-image-thumbnail.jpg" required>

        <button type="submit">Add Inventory</button>
    </form>
</body>
</html>
